                    <!-- <li class="nav-item active-pro ">
                  <a class="nav-link" href="./upgrade.html">
                      <i class="material-icons">unarchive</i>
                      <p>Upgrade to PRO</p>
                  </a>
              </li> -->
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 style="font-family: IranSans" class="card-title">مدیریت کاربران</h4>
                    </div>
                    <div style="text-align: left;direction: ltr;" class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning">
                                <th>نام</th>
                                <th>ایمیل</th>
                                <th>تاریخ عضویت</th>
                            </thead>
                            <tbody class="list-wrapper">
                                <% users.forEach(function (user) { %>
                                    <tr class="list-item">
                                        <td>
                                            <%= user.name %>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= data(user.createdAt).format('jYYYY/jM/jD , h:mm:ss a') %>
                                        </td>
                                        <td>
                                            <!-- Button trigger modal -->
                                            <button data-toggle="modal" data-target="#<%= user.id %>" type="button"
                                                rel="tooltip" title="ویرایش" class="btn btn-white btn-link btn-sm">
                                                <li class="material-icons">edit</li>
                                            </button>
                                            <!-- Modal -->
                                            <div class="modal fade" id="<%= user.id %>" tabindex="-1" role="dialog"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 style="font-family: IranSans" class="modal-title"
                                                                id="exampleModalLabel">ویرایش</h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <form action="/admin/users/<%= user.id %>?method=PUT"
                                                            method="POST">
                                                            <div style="text-align: right;direction: rtl;"
                                                                class="modal-body">
                                                                <div class="form-group col-12">
                                                                    <input name="name" style="color: black;" type="text"
                                                                        class="form-control" id="exampleInputname"
                                                                        placeholder="نام" value="<%= user.name %>">
                                                                </div>
                                                                <div class="form-group col-12">
                                                                    <input name="email" style="color: black;"
                                                                        type="text" class="form-control"
                                                                        id="exampleInputemail" placeholder="ایمیل"
                                                                        value="<%= user.email %>">
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">انصراف</button>
                                                                <button type="submit"
                                                                    class="btn btn-primary">ذخیره</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="button" rel="tooltip" title="حذف"
                                                class="btn btn-white btn-link btn-sm" data-target="#del<%= user.id %>"
                                                data-toggle="modal">
                                                <li class="material-icons">close</li>
                                            </button>
                                            <div class="modal fade" id="del<%= user.id %>" tabindex="-1" role="dialog"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 style="font-family: IranSans" class="modal-title"
                                                                id="exampleModalLabel">حذف</h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>

                                                        <div style="text-align: center;direction: rtl;"
                                                            class="modal-body">
                                                            <img src="https://img.icons8.com/fluent/90/000000/high-risk.png"
                                                                alt="">
                                                            <br>
                                                            آیا مطمئن هستید؟
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">انصراف</button>
                                                            <form action="/admin/users/<%= user.id %>?method=DELETE"
                                                                method="POST">
                                                                <button type="submit"
                                                                    class="btn btn-primary">حذف</button>
                                                            </form>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <div id="pagination-container"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/footer-admin'); -%>